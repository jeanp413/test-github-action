{
	"name": "Python 3.10 + CUDA 12.4 + Unsloth",
	// Use "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
	// instead of the build to use a pre-built image.
	"build": {
        "context": "..",
        "dockerfile": "Dockerfile"
    },

	// Configure tool-specific properties
	"customizations": {
		// Configure properties specific to VS Code
		"vscode": {
			"settings": {
				"python.defaultInterpreterPath": "/workspaces/venv/bin/python",
				"python.terminal.activateEnvironment": true,
				"remote.extensionKind": {
					"ms-python.python": ["workspace"],
					"ms-python.vscode-pylance": ["workspace"],
					"ms-toolsai.jupyter": ["workspace"],
					"saoudrizwan.claude-dev": ["workspace"]
    			}
			},
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter",
				"saoudrizwan.claude-dev"
			]
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created
	"postCreateCommand": "python --version",

	// Set environment variables
	"remoteEnv": {
		"PATH": "${containerEnv:PATH}:/workspaces/venv/bin",
		"PYTHONPATH": "${containerEnv:PYTHONPATH}:/workspaces/dev-container-model"
	}

	// Use 'postStartCommand' to run commands each time the container is started
	// "postStartCommand": "bash -c 'source /workspaces/venv/bin/activate && echo \"Virtual environment activated successfully\"'",


	// // Features add additional features to your environment
	// "features": {
